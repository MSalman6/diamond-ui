{
  "name": "diamond-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "contracts:update-dao": "find ../diamond-contracts-dao/artifacts/contracts -type f -name '*.json' ! -name '*.dbg.json' -exec cp {} ./src/contracts/abis \\;",
    "contracts:update-core": "find ../diamond-contracts-core/artifacts/contracts -type f -name '*.json' ! -name '*.dbg.json' -exec cp {} ./src/contracts/abis \\;",
    "contracts:update-all": "npm run contracts:update-dao && npm run contracts:update-core",
    "contracts:typechain": "typechain --target web3-v1 --out-dir src/contracts/types 'src/contracts/abis/**/*.json'",
    "contracts:build": "npm run contracts:update-all && npm run contracts:typechain"
  },
  "dependencies": {
    "@typechain/web3-v1": "^6.0.7",
    "next": "15.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typechain": "^8.3.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "typescript": "^5"
  }
}
